<tr>
  <td class="logo">
    <%= link_to image_tag(organization.logo, class: "small"),
                      organization_path(organization) %>
  </td>
  <td><%= link_to organization.name, organization_path(organization) %></td>
  <td><%= organization.resource_server_uri %></td>
  <td><%= link_to organization.authorization_server_uri, organization.authorization_server_uri %></td>
  <td>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_organization_path(organization), 
                :class => 'btn btn-default btn-xs' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                organization_path(organization),
                :method => :delete,
                :data => { :confirm => t('.confirm', 
                              :default => t("helpers.links.confirm", 
                              :default => 'Are you sure?')) },
                :class => 'btn btn-xs btn-danger' %>
  </td>
</tr>
