<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @organization.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resource_server) %>:</strong></dt>
  <dd><%= @organization.resource_server %></dd>
  <dt><strong><%= model_class.human_attribute_name(:authorization_server) %>:</strong></dt>
  <dd><%= @organization.authorization_server %></dd>
  <dt><strong>Client ID:</strong></dt>
  <dd><%= @organization.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_client_uri) %>:</strong></dt>
  <dd><%= @organization.registration_client_uri %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_access_token) %>:</strong></dt>
  <dd><%= @organization.registration_access_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo) %>:</strong></dt>
  <dd><%= @organization.logo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              organizations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_path(@organization), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_path(@organization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
